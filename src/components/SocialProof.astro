---
/* EDITAR AQUÍ: Datos de social proof y estadísticas */
const stats = [
  {
    number: "+5",
    label: "Años de experiencia",
    description: "Transformando negocios con tecnología"
  },
  {
    number: "100+",
    label: "Proyectos completados",
    description: "Soluciones exitosas implementadas"
  },
  {
    number: "6",
    label: "Países atendidos",
    description: "Presencia en LatAm & USA"
  }
];

const countries = [
  { code: "🇺🇸", name: "Estados Unidos", flag: "US" },
  { code: "🇵🇪", name: "Perú", flag: "PE" },
  { code: "🇨🇴", name: "Colombia", flag: "CO" },
  { code: "🇻🇪", name: "Venezuela", flag: "VE" },
  { code: "🇨🇱", name: "Chile", flag: "CL" },
  { code: "🇦🇷", name: "Argentina", flag: "AR" }
];

const testimonialHighlight = {
  text: "Clientes satisfechos en LatAm & USA",
  author: "Empresas que confían en OCMIND"
};
---

<section class="social-proof" id="experiencia">
  <div class="container">
    <div class="social-proof-content">
      <!-- Stats Section -->
      <div class="stats-section">
        <h2 class="section-title text-center">
          Respaldados por la experiencia
        </h2>
        
        <div class="stats-grid">
          {stats.map((stat, index) => (
            <div class="stat-card" style={`animation-delay: ${index * 0.1}s`}>
              <div class="stat-number">{stat.number}</div>
              <div class="stat-label">{stat.label}</div>
              <div class="stat-description">{stat.description}</div>
            </div>
          ))}
        </div>
      </div>

      <!-- Countries Section -->
      <div class="countries-section">
        <div class="countries-header">
          <h3 class="countries-title">Presencia Internacional</h3>
          <p class="countries-subtitle">
            Atendiendo empresas en múltiples países con soluciones personalizadas
          </p>
        </div>

        <div class="countries-grid">
          {countries.map((country, index) => (
            <div 
              class="country-item"
              style={`animation-delay: ${index * 0.05}s`}
              title={country.name}
              aria-label={`Atendemos clientes en ${country.name}`}
            >
              <span class="country-flag" aria-hidden="true">{country.code}</span>
              <span class="country-name">{country.name}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Trust Badges -->
      <div class="trust-section">
        <div class="trust-badge">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M12 1L3 5V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V5L12 1Z" stroke="var(--accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M9 12L11 14L15 10" stroke="var(--accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <div class="trust-content">
            <h4 class="trust-title">Garantía de Calidad</h4>
            <p class="trust-description">Proyectos con estándares internacionales</p>
          </div>
        </div>

        <div class="trust-badge">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M17 21V19C17 17.9391 16.5786 16.9217 15.8284 16.1716C15.0783 15.4214 14.0609 15 13 15H5C3.93913 15 2.92172 15.4214 2.17157 16.1716C1.42143 16.9217 1 17.9391 1 19V21" stroke="var(--accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="9" cy="7" r="4" stroke="var(--accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M23 21V19C23 18.1645 22.7155 17.3541 22.2094 16.7016C21.7033 16.0491 20.9997 15.5886 20.2 15.4" stroke="var(--accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M16 3.13A4 4 0 0 1 16 10.87" stroke="var(--accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <div class="trust-content">
            <h4 class="trust-title">Soporte 24/7</h4>
            <p class="trust-description">Asistencia continua para tu negocio</p>
          </div>
        </div>

        <div class="trust-badge">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" stroke="var(--accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <div class="trust-content">
            <h4 class="trust-title">Implementación Rápida</h4>
            <p class="trust-description">Resultados visibles en semanas</p>
          </div>
        </div>
      </div>

      <!-- Testimonial Highlight -->
      <div class="testimonial-highlight">
        <blockquote class="testimonial-text">
          "{testimonialHighlight.text}"
        </blockquote>
        <cite class="testimonial-author">{testimonialHighlight.author}</cite>
      </div>
    </div>
  </div>
</section>

<style>
  .social-proof {
    padding: var(--space-20) 0;
    background: linear-gradient(135deg, 
      rgba(245, 158, 11, 0.02) 0%, 
      transparent 50%, 
      rgba(37, 99, 235, 0.02) 100%);
    position: relative;
  }

  .social-proof::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
      transparent, 
      rgba(148, 163, 184, 0.3) 50%, 
      transparent);
  }

  .social-proof-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
  }

  .section-title {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-12);
    color: var(--text);
  }

  /* Stats Section */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-8);
  }

  .stat-card {
    text-align: center;
    padding: var(--space-8);
    border-radius: var(--radius);
    background: rgba(148, 163, 184, 0.05);
    border: 1px solid rgba(148, 163, 184, 0.1);
    transition: all var(--transition);
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .stat-card:hover {
    transform: translateY(-4px);
    border-color: var(--accent);
    box-shadow: var(--shadow);
  }

  .stat-number {
    font-size: var(--font-size-4xl);
    font-weight: 600;
    color: var(--accent);
    margin-bottom: var(--space-2);
  }

  .stat-label {
    font-size: var(--font-size-lg);
    font-weight: 500;
    color: var(--text);
    margin-bottom: var(--space-2);
  }

  .stat-description {
    font-size: var(--font-size-sm);
    color: var(--muted);
    line-height: 1.5;
  }

  /* Countries Section */
  .countries-section {
    text-align: center;
  }

  .countries-header {
    margin-bottom: var(--space-8);
  }

  .countries-title {
    font-size: var(--font-size-2xl);
    color: var(--text);
    margin-bottom: var(--space-4);
  }

  .countries-subtitle {
    color: var(--muted);
    font-size: var(--font-size-lg);
    max-width: 600px;
    margin: 0 auto;
  }

  .countries-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-6);
    flex-wrap: wrap;
  }

  .country-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4);
    border-radius: var(--space-2);
    transition: all var(--transition);
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
    cursor: default;
  }

  .country-item:hover {
    transform: scale(1.1);
  }

  .country-flag {
    font-size: 2rem;
    line-height: 1;
  }

  .country-name {
    font-size: var(--font-size-xs);
    color: var(--muted);
    font-weight: 500;
    white-space: nowrap;
  }

  /* Trust Section */
  .trust-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-6);
  }

  .trust-badge {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    padding: var(--space-6);
    border-radius: var(--radius);
    background: rgba(148, 163, 184, 0.03);
    border: 1px solid rgba(148, 163, 184, 0.1);
    transition: all var(--transition);
  }

  .trust-badge:hover {
    border-color: rgba(245, 158, 11, 0.3);
    background: rgba(245, 158, 11, 0.05);
  }

  .trust-content {
    flex: 1;
  }

  .trust-title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--text);
    margin-bottom: var(--space-2);
  }

  .trust-description {
    font-size: var(--font-size-sm);
    color: var(--muted);
    line-height: 1.5;
    margin: 0;
  }

  /* Testimonial Highlight */
  .testimonial-highlight {
    text-align: center;
    padding: var(--space-12);
    background: linear-gradient(135deg, 
      rgba(245, 158, 11, 0.1) 0%, 
      rgba(37, 99, 235, 0.05) 100%);
    border-radius: var(--radius);
    border: 1px solid rgba(245, 158, 11, 0.2);
  }

  .testimonial-text {
    font-size: var(--font-size-xl);
    font-weight: 500;
    color: var(--text);
    font-style: italic;
    margin-bottom: var(--space-4);
    line-height: 1.6;
  }

  .testimonial-author {
    font-size: var(--font-size-base);
    color: var(--accent);
    font-weight: 500;
    font-style: normal;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .social-proof {
      padding: var(--space-16) 0;
    }

    .social-proof-content {
      gap: var(--space-12);
    }

    .section-title {
      font-size: var(--font-size-2xl);
      margin-bottom: var(--space-8);
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .countries-grid {
      gap: var(--space-4);
    }

    .country-flag {
      font-size: 1.5rem;
    }

    .trust-section {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .trust-badge {
      padding: var(--space-4);
      gap: var(--space-3);
    }

    .testimonial-highlight {
      padding: var(--space-8);
    }

    .testimonial-text {
      font-size: var(--font-size-lg);
    }
  }

  @media (max-width: 480px) {
    .countries-grid {
      justify-content: space-between;
      gap: var(--space-2);
    }

    .country-item {
      padding: var(--space-2);
    }

    .country-flag {
      font-size: 1.25rem;
    }

    .country-name {
      font-size: 10px;
    }
  }
</style>