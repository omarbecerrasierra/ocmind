---
/* EDITAR AQUÍ: Contenido del Hero section */
const heroTitle = "Impulsamos tu negocio con IA, Marketing y Web";
const heroSubtitle = "Consultoría estratégica, bots de WhatsApp y sitios e-commerce listos para vender.";
const whatsappUrl = "https://wa.me/56964567998";

const services = [
  "Consultoría Estratégica • Análisis de Mercado • Estrategias de Marketing",
  "Análisis Predictivos • Visualización de Datos (BI, Python, VS Code, SQL, Java, Google Colab)",
  "Estrategias de Big Data • Dashboards e informes (ratios financieros)",
  "IA para Redes Sociales (bots de respuesta para WhatsApp Business, Instagram, Facebook)",
  "Desarrollo de Sitios Web Personalizados (dominio integrado, carrito, inventario, medios de pago)",
  "E-Commerce • Mantenimiento y Soporte Web"
];
---

<section class="hero" id="inicio">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title animate-fade-in-up">
          {heroTitle}
        </h1>
        
        <p class="hero-subtitle animate-fade-in-up">
          {heroSubtitle}
        </p>

        <div class="hero-buttons animate-fade-in-up">
          <a 
            href={whatsappUrl}
            class="btn btn-primary btn-lg"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Contactar por WhatsApp (abre en nueva ventana)"
          >
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.473 3.297" fill="currentColor"/>
            </svg>
            Escríbenos por WhatsApp
          </a>
          
          <a 
            href="#servicios"
            class="btn btn-secondary btn-lg"
            aria-label="Ver servicios (ir a sección servicios)"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M19 14l-7 7m0 0l-7-7m7 7V3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Ver servicios
          </a>
        </div>

        <!-- Servicios destacados -->
        <div class="hero-services animate-fade-in-up">
          <h2 class="sr-only">Servicios principales</h2>
          <ul class="services-list">
            {services.map((service, index) => (
              <li class="service-item" style={`animation-delay: ${(index + 1) * 0.1}s`}>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="var(--accent)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span>{service}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <div class="hero-visual">
        <div class="hero-illustration">
          <!-- Ilustración técnica minimalista -->
          <svg viewBox="0 0 400 300" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <!-- Elementos gráficos tech -->
            <defs>
              <linearGradient id="tech-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:var(--accent);stop-opacity:0.3" />
                <stop offset="100%" style="stop-color:var(--accent2);stop-opacity:0.1" />
              </linearGradient>
            </defs>
            
            <!-- Círculos conectados -->
            <circle cx="100" cy="80" r="30" fill="url(#tech-gradient)" stroke="var(--accent)" stroke-width="2"/>
            <circle cx="200" cy="60" r="25" fill="none" stroke="var(--muted)" stroke-width="1"/>
            <circle cx="300" cy="100" r="35" fill="url(#tech-gradient)" stroke="var(--accent)" stroke-width="2"/>
            
            <!-- Líneas de conexión -->
            <path d="M130 80 L175 65" stroke="var(--accent)" stroke-width="2" stroke-dasharray="5,5"/>
            <path d="M225 65 L265 95" stroke="var(--accent)" stroke-width="2" stroke-dasharray="5,5"/>
            
            <!-- Elementos de datos -->
            <rect x="80" y="140" width="80" height="40" rx="8" fill="none" stroke="var(--muted)" stroke-width="1"/>
            <rect x="180" y="160" width="60" height="30" rx="6" fill="var(--accent)" opacity="0.2"/>
            <rect x="260" y="150" width="70" height="35" rx="8" fill="none" stroke="var(--accent)" stroke-width="1"/>
            
            <!-- Texto tech -->
            <text x="100" y="85" text-anchor="middle" fill="var(--text)" font-size="10" font-weight="600">AI</text>
            <text x="200" y="67" text-anchor="middle" fill="var(--muted)" font-size="8">WEB</text>
            <text x="300" y="107" text-anchor="middle" fill="var(--text)" font-size="9" font-weight="600">MKT</text>
            
            <!-- Partículas flotantes -->
            <circle cx="50" cy="50" r="2" fill="var(--accent)" opacity="0.6">
              <animate attributeName="cy" values="50;40;50" dur="3s" repeatCount="indefinite"/>
            </circle>
            <circle cx="350" cy="180" r="3" fill="var(--accent2)" opacity="0.4">
              <animate attributeName="cx" values="350;360;350" dur="4s" repeatCount="indefinite"/>
            </circle>
            <circle cx="150" cy="220" r="2" fill="var(--muted)" opacity="0.8">
              <animate attributeName="cy" values="220;210;220" dur="2.5s" repeatCount="indefinite"/>
            </circle>
          </svg>
          
          <!-- Elementos decorativos adicionales -->
          <div class="floating-elements" aria-hidden="true">
            <div class="floating-element element-1"></div>
            <div class="floating-element element-2"></div>
            <div class="floating-element element-3"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    padding: calc(var(--space-20) + 60px) 0 var(--space-20);
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 20%, rgba(245, 158, 11, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 70% 80%, rgba(37, 99, 235, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero-title {
    margin-bottom: var(--space-6);
    background: linear-gradient(135deg, var(--text) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--muted);
    margin-bottom: var(--space-8);
    line-height: 1.6;
  }

  .hero-buttons {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-12);
  }

  .btn-lg {
    padding: var(--space-4) var(--space-8);
    font-size: var(--font-size-lg);
  }

  .hero-services {
    margin-top: var(--space-8);
  }

  .services-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .service-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
    font-size: var(--font-size-sm);
    color: var(--muted);
    line-height: 1.5;
  }

  .service-item svg {
    flex-shrink: 0;
    margin-top: 2px;
  }

  .hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .hero-illustration {
    width: 100%;
    max-width: 400px;
    position: relative;
  }

  .hero-illustration svg {
    width: 100%;
    height: auto;
  }

  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .floating-element {
    position: absolute;
    border-radius: 50%;
    opacity: 0.6;
  }

  .element-1 {
    width: 8px;
    height: 8px;
    background-color: var(--accent);
    top: 20%;
    left: 10%;
    animation: float 6s ease-in-out infinite;
  }

  .element-2 {
    width: 12px;
    height: 12px;
    background-color: var(--accent2);
    top: 60%;
    right: 15%;
    animation: float 4s ease-in-out infinite reverse;
  }

  .element-3 {
    width: 6px;
    height: 6px;
    background-color: var(--muted);
    bottom: 30%;
    left: 20%;
    animation: float 5s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: calc(var(--space-16) + 60px) 0 var(--space-16);
      min-height: auto;
    }

    .hero-content {
      grid-template-columns: 1fr;
      gap: var(--space-12);
      text-align: center;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn-lg {
      width: 100%;
      max-width: 280px;
    }

    .hero-subtitle {
      font-size: var(--font-size-lg);
    }

    .hero-visual {
      order: -1;
    }

    .hero-illustration {
      max-width: 300px;
    }

    .services-list {
      text-align: left;
    }
  }

  @media (max-width: 480px) {
    .hero-buttons {
      gap: var(--space-3);
    }

    .service-item {
      font-size: var(--font-size-xs);
    }
  }
</style>