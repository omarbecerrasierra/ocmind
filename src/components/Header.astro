          <path d="M12 16C12 13.7909 13.7909 12 16 12C18.2091 12 20 13.7909 20 16C20 18.2091 18.2091 20 16 20C13.7909 20 12 18.2091 12 16Z" fill="var(--accent)"/>
        </svg>
        <span class="logo-text">OCMIND</span>
      </a>

      <!-- Desktop Navigation -->
      <ul class="nav-links" role="menubar">
        {navLinks.map((link) => (
          <li role="none">
            <a 
              href={link.href} 
              class="nav-link"
              role="menuitem"
            >
              {link.label}
            </a>
          </li>
        ))}
