    <!-- Mobile Menu -->
    <div class="mobile-menu" id="mobile-menu" data-mobile-menu>
      <ul class="mobile-nav-links">
        {navLinks.map((link) => (
          <li>
            <a href={link.href} class="mobile-nav-link">
              {link.label}
            </a>
          </li>
        ))}
        <li>
          <a 
            href="https://wa.me/56964567998" 
            class="btn btn-primary mobile-cta"
            target="_blank"
            rel="noopener noreferrer"
          >
