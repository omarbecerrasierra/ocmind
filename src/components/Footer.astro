const footerLinks = {
  services: [
    { href: "#servicios", label: "Consultoría IA" },
    { href: "#servicios", label: "Marketing Digital" },
    { href: "#servicios", label: "Desarrollo Web" },
    { href: "#servicios", label: "E-commerce" },
    { href: "#servicios", label: "Bots WhatsApp" },
    { href: "#servicios", label: "Análisis de Datos" }
  ],
  company: [
    { href: "#inicio", label: "Inicio" },
    { href: "#planes", label: "Planes" },
    { href: "#faq", label: "FAQ" },
